@{
  Layout = "_Layout";
}
@model DrSillyStringzFactory.Models.Engineer
<div class="container">
  <div class="jumbotron">
    <h1>Add a new Engineer</h1>
  </div>
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new {required = "required"})
    @Html.LabelFor(model => model.License)
    @Html.TextBoxFor(model => model.License, new {required = "required"})
    
    <input type="submit" value="Add new Engineer" class="btn btn-outline-dark" />
  }
</div>