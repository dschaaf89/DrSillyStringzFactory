@{
  Layout = "_Layout";
}
@using DrSillyStringzFactory.Models;


<div class="container">
  <div class="jumbotron">
    <h1>@Model.Name Page</h1>
  </div>
  @if(Model.EngineerMachines.Count == 0)
  {
    <p>@Model.Name has no Machines.</p>
  }
  <ol>
    @foreach (EngineerMachine engineerMachine in Model.EngineerMachines)
    {
        <li>@engineerMachine.Engineer.Name</li>
    }
  </ol>
    <ol>
    @foreach (EngineerLicense engineerLicense in Model.EngineerLicenses)
    {
        <li>@engineerLicense.License.LicenseId</li>
    }
  </ol>
  <button class="btn btn-outline-dark" onclick="window.location.href='/Engineers/AddLicense/@Model.EngineerId'">Add a License</button>
  <button class="btn btn-outline-dark" onclick="window.location.href='/Engineers'">Engineers</button>
  @Html.ActionLink("Delete","Delete", new {id = Model.EngineerId}, new{@class="btn btn-outline-dark"})


</div>