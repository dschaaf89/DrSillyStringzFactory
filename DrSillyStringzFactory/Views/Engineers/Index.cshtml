@{
  Layout = "_Layout";
}
@using DrSillyStringzFactory.Models;
<div class="container">
  <div class="jumbotron">
    <h3>Engineers</h3>
  </div>
  
  @if(Model.Count == 0)
  {
    <h6>There are no Engineers at this time.</h6>
  }
  <ol>
    @foreach(Engineer engineer in Model)
    {
      <li>@Html.ActionLink(engineer.Name,"Details", new {id = engineer.EngineerId})</li>
    }
  </ol>

  <p>@Html.ActionLink("Create Engineer","Create")</p>
  <p>@Html.ActionLink("Home","Index","Home")</p>



</div>